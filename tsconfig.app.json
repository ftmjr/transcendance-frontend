{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "types/**/*.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@themeConfig": [ "./src/vuetify/themeConfig"],
      "@layouts/*": [ "./src/vuetify/@layouts/*"],
      "@layouts": ["./src/vuetify/@layouts"],
      "@core/*": [ "./src/vuetify/@core/*"],
      "@core": [ "./src/vuetify/@core" ],
      "@styles/*": ["./src/vuetify/styles/*" ]
    }
  },
}
